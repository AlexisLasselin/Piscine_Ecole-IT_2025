# Étape 1 : build des dépendances (avec gcc)
FROM python:3.11-slim AS builder

WORKDIR /app

# Installer outils de build uniquement ici
RUN apt-get update && apt-get install -y --no-install-recommends gcc \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir --prefix=/install -r requirements.txt

# Étape 2 : image finale, super légère
FROM python:3.11-slim

WORKDIR /app

# Copier seulement les deps installées depuis l'étape builder
COPY --from=builder /install /usr/local

# Copier uniquement les fichiers utiles
COPY app.py lexer.py parser.py interpreter.py ./

EXPOSE 5000
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "5000"]
