# Étape 1 : Build des dépendances (si besoin de compilation)
FROM python:3.11-alpine AS builder

WORKDIR /app

# Installer outils de build (nécessaire pour certaines libs Python comme pydantic, uvicorn, etc.)
RUN apk add --no-cache \
    gcc \
    musl-dev \
    libffi-dev \
    make \
    build-base

# Copier uniquement requirements.txt pour tirer parti du cache Docker
COPY requirements.txt .

# Installer les dépendances dans un dossier temporaire
RUN pip install --no-cache-dir --prefix=/install -r requirements.txt


# Étape 2 : Image finale ultra-minimale
FROM python:3.11-alpine

WORKDIR /app

# Copier les dépendances installées depuis builder
COPY --from=builder /install /usr/local

# Copier seulement les fichiers essentiels
COPY app/ ./app/
COPY lexer.py parser.py interpreter.py ./

# Démarrer avec Uvicorn
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "5000"]
